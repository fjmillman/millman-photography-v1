/**************************/
/*   Navigation Styles    */
/**************************/
nav
  position: fixed
  top: 0
  color: #000
  padding 5px
  height: auto
  width: 100%
  background: #ffffff
  box-shadow: 0 1px 15px #232323
  z-index: 10

.logo
  height: 50px
  width: 130px

.navigation
  display block

ul#navigation
  padding: 0 25px 0 25px

ul#navigation a.navigation-button
  color: black
  padding: 5px 20px 15px 20px
  text-transform: uppercase
  vertical-align: middle
  letter-spacing: .05em

ul#navigation a.navigation-button li.navigation
  padding-top: 10px
  display: inline-block

.underline
  display: inline-block
  position: relative

.underline:after
  content: ''
  position: absolute
  bottom: 0
  left: 0
  height: 0
  width: 100%
  background: transparent
  transition: all ease 0.1s

.underline:hover:after
  height: 2px
  background: #000000
