/**************************/
/*    General Styles      */
/**************************/
*
  box-sizing: border-box;

html
  height: 100%

body
  height: auto
  min-height: 100%
  position: relative
  margin: 0
  padding-top: 75px
  padding-bottom: 50px
  overflow-x: hidden
  font-family: "Helvetica Neue Light", "HelveticaNeue-Light", "Helvetica Neue", Helvetica, Arial, sans-serif

h1,
h2,
h3,
h4,
h5,
h6
  text-transform: uppercase

a
  color: black
  text-decoration: none

a.button
  background: rgb(255, 255, 255)
  width: 200px
  padding: 8px
  border-color: #000000
  border-radius: 5px

a.button:hover,
a.button:focus,
a.button:active
  background: rgb(0, 0, 0)
  color: white
  border-color: #ffffff

button.submit
  margin: 20px
  margin-bottom: 0

button:hover
  background: rgb(130, 130, 130)

.text-black
  color: black

.text-white
  color: white

.switch
  padding: 15px

/**************************/
/*  Admin Button Styles  */
/**************************/
a.admin-button
  font-size: 15px
  text-align: center
  color: #000000
  transition: all .3s

a.admin-button:hover,
a.admin-button:focus,
a.admin-button:active
  color: #878787

/**************************/
/*     Header Styles      */
/**************************/
header
  height: 95vh
  padding: 50px
  background-color: #ffffff
  z-index: 9

header:before
  content: ""
  position: fixed
  height: 100vh
  width: 100vw
  top: 0
  left: 0
  right: 0
  bottom: 0
  display: block
  background: url(../img/ashnessjetty.jpg) center center no-repeat fixed
  background-size: cover

header .banner
  background-color: rgba(255, 255, 255, 0.75)
  padding: 20px

.signature
  height: 100px
  width: 260px

header .header-heading
  color: rgba(0, 0, 0, 0.75)
  font-size: xx-large
  font-weight: 100

header .header-subheading
  color: rgb(80, 80, 80)
  font-size: medium
  letter-spacing: 0.01em

/**************************/
/*     Section Styles     */
/**************************/
section
  padding: 50px

section .section-heading
  color: rgb(255, 255, 255)
  font-size: xx-large
  font-weight: bold

section .section-subheading
  color: rgba(255, 255, 255, 0.5)
  font-size: large
  padding-bottom: 15px

.anchor
  display: block
  height: 75px
  margin-top: -75px
  visibility: hidden

.fix-panel-background
  overflow: auto
  position: relative
  z-index: -1

/**************************/
/*      Blog Styles       */
/**************************/
section.blog
  background-color: white
  z-index: 1

section.blog .section-heading
  color: rgb(0, 0, 0)

ol.blog-posts
  margin-left: -35px
  padding-top: 15px
  list-style-type: none

/**************************/
/*     Form Styles     */
/**************************/
form
  padding: 15px

.form-group
  margin-bottom: 25px

.form-group input,
.form-group textarea
  padding: 20px

.form-group textarea.form-control
  height: 150px

.form-control:focus
  border-color: #373737
  box-shadow: none

/**************************/
/*      About Styles      */
/**************************/
section.about
  color: white

section.about:before
  content: ""
  position: fixed
  height: 100vh
  width: 100vw
  top: 0
  left: 0
  right: 0
  bottom: 0
  display: block
  background: url(../img/northumberland.jpg) center center no-repeat fixed
  background-size: cover
  filter: blur(10px)

section.about .portrait
  padding-top: 25px
  width: 450px

section.about .text-block
  padding-top: 25px
  max-width: 475px

/**************************/
/*     Gallery Styles     *
/**************************/
section.gallery
  background-color: white
  z-index: 1

section.gallery .section-heading
  color: rgb(0, 0, 0)

/**************************/
/*    Services Styles     */
/**************************/
section.services:before
  content: ""
  position: fixed
  height: 100%
  width: 100%
  top: 0
  left: 0
  right: 0
  bottom: 0
  display: block
  background: url(../img/swaledale.jpg) center center no-repeat fixed
  background-size: cover
  filter: blur(10px)

section.services .service-group
  padding-top: 20px

section.services .service-heading
  padding-top: 15px

/**************************/
/*     Enquiry Styles     */
/**************************/
section.enquiry .section-heading
  color: rgb(0, 0, 0)

/**************************/
/*     Project Styles     */
/**************************/
section .project-item
  width: 400px

section .project-item .project-link
  display: block
  position: relative
  margin: 0 auto

section .project-item .project-caption
  padding-top: 20px
  padding-bottom: 5px
  text-align: center
  background-color: #fff

section .project-item .project-caption h4
  text-transform: none

section .project-item .project-caption p
  font-size: 16px
  font-style: italic

/**************************/
/*     Footer Styles      */
/**************************/
footer
  padding: 15px
  width: 100%
  background: #ffffff
  position: absolute
  right: 0
  bottom: 0
  left: 0

footer .copyright
  font-size: small
  text-transform: uppercase

footer .tag-line
  font-size: small
  text-transform: uppercase
